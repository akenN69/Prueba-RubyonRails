<h1>Index de ToDo</h1>
<% @completes.each do |todo|%>
    <p><%= "#{todo.description} / #{todo.completed}"%></p>
    <%= link_to "Ver", todo %>
    <%= link_to "Edit", edit_todo_path(todo) %>
    <%= link_to "Eliminar", todo, method: :delete, data: {confirm: 'Estas seguro?'}%></p>
    <%= button_to "Completar", completes_path(todo)%></p>
    

<% end %>

<h2>Tareas completadas ToDo</h2>
<% @nocompletes.each do |todo|%>
    <p><%= "#{todo.description} / #{todo.completed}"%></p>
    <%= link_to "Ver", todo %>
    <%= link_to "Edit", edit_todo_path(todo) %>
    <%= link_to "Eliminar", todo, method: :delete, data: {confirm: 'Estas seguro?'}%></p>
    <%= button_to "Pendiente", completes_path(todo), method: :delete%></p>
    

<% end %>
